{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": ".",
    "lib": [
      "es2017.object",
      "es2015",
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "dist/"
  ]
}